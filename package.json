{
  "name": "TinyPanda",
  "private": true,
  "version": "1.1.1",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none vite \" \"yarn electron\"",
    "electron": "wait-on tcp:3001 && cross-env IS_DEV=true electron .",
    "build": "vite build  && yarn electron-builder",
    "icons": "electron-icon-builder --input=./public/logo.png --output=build --flatten",
    "icons-win": "electron-icon-builder --input=./public/logo-win.png --output=./build/win-icons --flatten"
  },
  "dependencies": {
    "browser-image-compression": "^2.0.2",
    "compressorjs": "^1.2.1",
    "jszip": "^3.10.1",
    "pako": "^2.1.0",
    "upng-js": "^2.1.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "electron-windows-store": "^2.1.0",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tinyPanda.png",
    "productName": "TinyPanda",
    "copyright": "Copyright Â© 2024 jddk",
    "buildDependenciesFromSource": true,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "win": {
      "icon": "./build/Resources/icon.ico"
    },
    "linux": {
      "icon": "./build/Resources/icon.ico"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "type": "distribution",
      "icon": "./build/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "sign": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/icon.ico",
      "uninstallerIcon": "./build/icons/icon.ico",
      "installerHeaderIcon": "./build/icons/icon.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "pkg"
    }
  }
}
